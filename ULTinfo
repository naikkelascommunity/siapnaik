    <script>
        function toggleDropdown(header) {
            const section = header.parentElement;
            const allSections = document.querySelectorAll('.dropdown-section');
            
            // Close all other sections
            allSections.forEach(s => {
                if (s !== section) {
                    s.classList.remove('active');
                }
            });
            
            // Toggle current section
            section.classList.toggle('active');
        }

        // Open first dropdown by default
        document.addEventListener('DOMContentLoaded', function() {
            const firstDropdown = document.querySelector('.dropdown-section');
            if (firstDropdown && !firstDropdown.classList.contains('active')) {
                firstDropdown.classList.add('active');
            }
        });
    </script>
